{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "resolveJsonModule": true,
    "lib": [
      "es2021"
    ],
    "allowJs": false,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "inlineSourceMap": true ,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}